<h2>definition_id: <%= @definition_id.name %></h2>
<h3>definition: <%= @definition_id.definition.name %></h3>

<form action="/definition/<%= @definition_id.definition.id %>/definition_id/<%= @definition_id.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename definition_id</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update definition_id</button>
</form>

<form action="/word/<%= @definition_id.word.id %>/definition_ids/<%= @definition_id.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition_id</button>
</form>

<a href="/word/<%= @definition_id.word.id %>">Back to <%= @definition_id.word.name %></a>