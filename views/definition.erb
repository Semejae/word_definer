<h2>definition: <%= @definition.name %></h2>
<h3>word: <%= @definition.word.name %></h3>

<form action="/word/<%= @definition.word.id %>/definition/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="patch">

  <label for="name">Rename definition</label>
  <input id="name" name="name" type="text">

  <button type="submit">Update definition</button>
</form>

<form action="/word/<%= @definition.word.id %>/definition/<%= @definition.id %>" method="post">
  <input name="_method" type="hidden" value="delete">

  <button type="submit">Delete definition</button>
</form>

<a href="/word/<%= @definition.word.id %>">Back to <%= @definition.word.name %></a>