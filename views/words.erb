<h1>Words</h1>

<h3>Word Definitions</h3>

<% if @word.any? %>
  <ul>
    <% @word.each do |word| %>
      <li><%= word.name %></li>
    <% end %>
  </ul>
<% else %>
  <p>There are currently no words to display.</p>
<% end %>

<a href="/word/new">Add a new word</a>

<form action="/word">
  <div class="form-group">
    <label for="search">Search</label>
    <input id="search" name="search" class="form-control" type="text">
  </div>
  <button type="submit" class="btn">Go!</button>
</form>

<% @word.each do |word| %>
  <li><a href="/word/<%= word.id %>"><%= word.name %></a></li>
<% end %>
